//***********************************************************
//Functions
//***********************************************************
void GET_ID(){
    victim_id:=id;
}


bool MATCH(int id){
    match_found = false;
    for (i=0; i&lt;100; i++){
        if(id == id_arr[i]){
            match_found = true;
        }
    }
    return match_found;
}

void ADD_RECORD(int id){
    for (i=0; i&lt;100; i++){
        if(id_arr[i]==0){
            id_arr[i] = id;
            return;
        }
    }
}

bool RECORD_EXISTS(){
    //EMPTY
    if (match_found)
        return true;
    else
        return false;
}


